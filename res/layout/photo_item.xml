<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="75dip" 
    >
    
    <ProgressBar 		
		android:layout_width="15dip"       
        android:layout_height="15dip"
		android:id="@+id/pbar" 
		android:textSize="12sp"	
		android:layout_marginTop="30dip"
		android:layout_marginBottom="30dip"
		android:layout_marginLeft="42dip"
		android:layout_marginRight="43dip"
		android:visibility="gone"
	/>
	
	<!--  
	<ProgressBar 
		android:id="@+id/pbar" 
		android:layout_gravity="center_horizontal"
		android:layout_width="20dip"      
	   	android:layout_height="20dip"
	   	android:layout_centerInParent="true"
	   	android:layout_margin="10dip"
	/> 
    -->
    <ImageView
        android:id="@+id/tb"       
        android:layout_width="100dip"       
        android:layout_height="75dip"
        android:scaleType="centerCrop"
        />
        
	<TextView 
		android:id="@+id/name" 
		android:layout_toRightOf="@id/tb"
		android:layout_width="fill_parent" android:layout_height="wrap_content" 		
		android:text="Europe's Leaders Fear Libya Could Become Next Afghanistan" 
		android:paddingLeft="6dip"
		android:paddingRight="6dip"
		android:paddingTop="6dip"
		android:maxLines="2"
		android:textSize="15sp"
		android:textStyle="bold"
		android:layout_alignWithParentIfMissing="true"
	/>
	
	
	<TextView 		
		android:id="@+id/meta"			
		android:layout_toRightOf="@id/tb"
		android:layout_below="@id/name"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="March 29th, 2010. 09:34 AM" 		
		android:layout_marginTop="2dip"
		android:paddingLeft="6dip"
		android:paddingBottom="6dip"
		android:ellipsize="marquee"
		android:singleLine="true"
		android:textSize="14sp"
	/>
	
    

</RelativeLayout>